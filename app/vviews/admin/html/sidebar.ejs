<%  
    let arrMenu = [
        
        {name: 'Dashboard', icon: 'fas fa-home', link: `${systemConfig.prefixAdmin}/dashboard`},
        {name: 'Slider', icon:'fas fa-sliders-h', link: `${systemConfig.prefixAdmin}/slider`},
        {name: 'Groups-Users', icon: 'fas fa-layer-group',  link: `#` , isChild : true, children:[{name: 'groups', icon: 'fa-users', link: `${systemConfig.prefixAdmin}/groups`},{name: 'users', icon: 'fa-user', link: `${systemConfig.prefixAdmin}/users`}]},
        {name: 'Categories-Articles', icon: 'fas fa-layer-group',  link: `#` , isChild : true, children:[{name: 'Categories', icon:'fa-folder', link: `${systemConfig.prefixAdmin}/categories`},{name: 'Articles', icon: 'fa-newspaper', link: `${systemConfig.prefixAdmin}/articles`, },]},
        {name: 'Setting', icon:' fas fa-wrench', link: `${systemConfig.prefixAdmin}/settings`},
        {name: 'Socials',icon:'fas fa-share-alt-square', link: `${systemConfig.prefixAdmin}/socials/form/6367d3c8457c060bacd947af`},
        {name: 'Header',icon:'fas fa-heading', link: `${systemConfig.prefixAdmin}/header/form/6369e5dd34be243164f97ac0`},
        {name: 'Footer',icon:'fas fa-terminal', link: `${systemConfig.prefixAdmin}/footer/form/636b6cd119a28f09eb90ce19`}
    ];
    let xhtmlMenu = '';
    arrMenu.forEach(menu => {
        if(menu.isChild){
            let htmlChild ='';
            menu.children.forEach(child =>{
                htmlChild += `<li class="nav-item">
                    <a href="${child.link}" class="nav-link" data-active="${child.name.toLowerCase()}">
                        <i class="nav-icon fas ${child.icon}"></i>
                        <p>${child.name}</p>
                    </a>
                </li>`;
            })
            xhtmlMenu += `<li class="nav-item  ">
                <a href="${menu.link}" class="nav-link" data-active="${menu.name.toLowerCase()}">
                    <i class="nav-icon  ${menu.icon}"></i>
                    <p>${menu.name}</p>
                    <i class="fas fa-angle-left right"></i>
                </a>
                <ul class="nav nav-treeview" style="display: none;">
                    ${htmlChild}
                </ul>
            </li>`;
        }else{
            xhtmlMenu += `<li class="nav-item">
                <a href="${menu.link}" class="nav-link" data-active="${menu.name.toLowerCase()}">
                    <i class="nav-icon fas ${menu.icon}"></i>
                    <p>${menu.name}</p>
                </a>
            </li>`;
        }
       
    }); 
   
    %>

<aside class="main-sidebar sidebar-dark-info elevation-4">
    <!-- Brand Logo -->
    <a href="index3.html" class="brand-link">
        <img src="backend/adminlte/images/logo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
        <span class="brand-text font-weight-light">ZendVN</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="backend/adminlte/images/default-user.jpg" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                <a href="#" class="d-block">Admin ZendVN</a>
            </div>
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <%- xhtmlMenu %>
                
                
            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>


