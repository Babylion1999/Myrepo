
<% 
const collection = "items";
const linkPrefix = systemConfig.prefixAdmin + `/${collection}/`;
%>

<% include ./../../helpers/sectionbox %>


<% include ./../../elements/errors %>

<%= JSON.stringify(item) %>

<div class="card card-info card-outline">
<form action="<%= linkPrefix %>save/" method="POST" class="mb-0" >
    <div class="card-body">
    
        <div class="form-group row">
            <label for="name" class="col-sm-2 col-form-label text-sm-right required">Name</label>
            <div class="col-xs-12 col-sm-8">
                <input type="text" name="name" class="form-control form-control-sm"  value="<%= item.name %>" onkeyup="ChangeToSlug();" >
            </div>
        </div>
        

        <div class="form-group row">
            <label for="name" class="col-sm-2 col-form-label text-sm-right required">Ordering</label>
            <div class="col-xs-12 col-sm-8">
                <input type="text" name="ordering"  class="form-control form-control-sm " value="<%= item.ordering %>">
            </div>
        </div>

        <div class="form-group row">
            <label for="status" class="col-sm-2 col-form-label text-sm-right">Status</label>
            <div class="col-xs-12 col-sm-8">
                <select id="form[status]" name="status" class="custom-select custom-select-sm" >
                    <option value="novalue">Choose Status</option>
                    <option value="active" <%= (item.status == "active") ? 'selected="selected"' : '' %> >Active</option>
                    <option value="inactive" <%= (item.status == "inactive") ? 'selected="selected"' : '' %>  >Inactive</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label for="category" class="col-sm-2 col-form-label text-sm-right">Group</label>
            <div class="col-xs-12 col-sm-8">
                <%-  sectionboxHelper('category_id', categoryItems,item.category_id) %>
            </div>
        </div>
        <div class="form-group row">
            <label for="name" class="col-sm-2 col-form-label text-sm-right required">Price</label>
            <div class="col-xs-12 col-sm-8">
                <input type="text" name="price"  class="form-control form-control-sm " value="<%= item.price %>">
            </div>
        </div>
        <div class="form-group row">
            <label for="content" class="col-sm-2 col-form-label text-sm-right required">Content</label>
            <div class="col-xs-12 col-sm-8 " >
                <input  id="id_content" type="text" name="content"  class=" form-control form-control-sm " value="<%= item.content %>">
            </div>
        </div>
        
        
    
    </div>
    <div class="card-footer">
        <div class="col-12 col-sm-8 offset-sm-2">
            <input class="form-control" name="id" value="<%= item.id %>" type="hidden" >
            <input class="form-control" name="category_name" value="<%= item.category_name %>"  >
            <button type="submit" class="btn btn-sm btn-success mr-1"> Submit</button>
            <a href="<%= linkPrefix %>" class="btn btn-sm btn-danger mr-1"> Cancel</a>
        </div>
    </div>
</form>
</div>