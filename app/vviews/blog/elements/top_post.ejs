<% 
	
	const pathUpload ="backend/adminlte/images/articles/";
	
%>

<div class="trending-area fix">
    <div class="container">
        
        <div class="trending-main">
            <!-- Trending Tittle -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="trending-tittle">
                        <strong>Trending now</strong>
                        <!-- <p>Rem ipsum dolor sit amet, consectetur adipisicing elit.</p> -->
                        <div class="trending-animated">
                            <ul id="js-news" class="js-hidden">
                                <% for(let i= 1; i < itemsTopPost.length; i++) { %>
                                <li class="news-item"><%= itemsTopPost[i].name %></li>
                                <% } %>
                            </ul>
                        </div>
                        
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8">
                    <!-- Trending Top frontend/assets/img/trending/trending_top.jpg -->
                    <div class="trending-top mb-30">
                        <div class="trend-top-img">
                            <img src="<%= pathUpload + itemsTopPost[0].thumb %>" alt="">
                            <div class="trend-top-cap">
                                <span><%= itemsTopPost[0].category.name %></span>
                                <h2><a href="/articles/<%= itemsTopPost[0].id %>"><%= itemsTopPost[0].name %></a></h2>
                                <ul class="d-flex ">
                                    <li>
                                        
                                        <a href="#">
                                            <span class="lnr lnr-user" style="background: none;font-size: 16px;color: #FFF9C6;"></span><%= itemsTopPost[0].created.user_name %></a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <span class="lnr lnr-calendar-full"style="background: none;font-size: 16px;color: #FFF9C6;"></span><%= moment(itemsTopPost[0].created.time).format("MMM Do YY") %></a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <span class="lnr lnr-bubble" style="background: none;font-size: 16px;color: #FFF9C6;"></span>06 Comments</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Trending Bottom -->
                    <div class="trending-bottom">
                        <div class="row">
                            <% for(let i= 1; i < 4; i++) { %>
                            <div class="col-lg-4">
                            <div class="single-bottom mb-35">
                                <div class="trend-bottom-img mb-30">
                                    <img src="<%= pathUpload + itemsTopPost[i].thumb %>" alt="">
                                </div>
                                <div class="trend-bottom-cap">
                                    <div class="d-flex justify-content-between"><span class="color<%= i %>"><%= itemsTopPost[i].category.name %></span><a href="#" class="text-dark"><span class="lnr lnr-calendar-full"style="background: none;font-size: 16px;color: #000;"></span><%= moment(itemsTopPost[i].created.time).format("MMM Do YY") %></a></div>
                                    <h4><a href="/articles/<%= itemsTopPost[i].id %>"><%= itemsTopPost[i].name %></a></h4>
                                </div>
                            </div>
                            </div>
                            <% } %>
                        </div>
                    </div>
                   
                </div>
                <!-- Riht content -->
                
                <div class="col-lg-4">
                    <% for(let i= 4; i < itemsTopPost.length; i++) { %>  
                    <div class="trand-right-single d-flex">
                        <div class="trand-right-img col-5">
                            <img src="<%= pathUpload + itemsTopPost[i].thumb %> " class="w-100" alt="">
                        </div>
                        <div class="trand-right-cap col-7">
                            <span class="color<%= i-4 %>"><%= itemsTopPost[i].category.name %></span>
                            <h4><a href="/articles/<%= itemsTopPost[i].id %>"><%= itemsTopPost[i].name %></a></h4>
                        </div>
                    </div>
                    <% } %>
                </div>
                
            </div>
        </div>
    </div>
</div>